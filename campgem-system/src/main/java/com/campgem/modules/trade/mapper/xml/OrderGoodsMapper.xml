<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.campgem.modules.trade.mapper.OrderGoodsMapper">
	
	<select id="getGoodsInfo" resultType="com.campgem.modules.trade.entity.Goods">
		SELECT
			g.*
		FROM
			orders_goods og
				LEFT JOIN goods g ON g.id = og.goods_Id
		WHERE
			order_id = #{orderId}
	</select>
</mapper>